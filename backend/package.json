{
  "name": "dominus-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "arkit": "arkit",
    "lint": "eslint **/*.ts --fix && speccy lint swagger.json -s server-trailing-slash -s info-contact -s openapi-tags",
