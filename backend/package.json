    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.2.1",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.0.8",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.13-4.3.1",
